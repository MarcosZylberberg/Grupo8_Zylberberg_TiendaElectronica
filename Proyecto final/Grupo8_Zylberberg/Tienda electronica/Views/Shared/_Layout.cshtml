<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tienda_electronica</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    Okidoki Tienda Electrónica
                </a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Alternar navegación">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0"></ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contacto</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text">@User.Identity.Name</span>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#InicioSesionModal">
                                    Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">
                                    Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center py-3 mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - Okidoki Tienda Electrónica -
            <a asp-controller="Home" asp-action="Privacy">Políticas de privacidad</a>
        </div>
    </footer>

    <!-- Modal: Inicio de sesión -->
    <div class="modal fade" id="InicioSesionModal" tabindex="-1" aria-labelledby="InicioSesionLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="InicioSesionLabel">Iniciar Sesión</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        @* Mostrar error si credenciales inválidas *@
                        if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger">@TempData["LoginError"]</div>
                        }
                        <div class="mb-3">
                            <label for="loginUsername" class="form-label">Usuario</label>
                            <input type="text" name="Username" id="loginUsername" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label">Contraseña</label>
                            <input type="password" name="Password" id="loginPassword" class="form-control" />
                        </div>
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Modal de selección de registro -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerModalLabel">Registro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="registerType" id="optCliente" value="Cliente">
                        <label class="form-check-label" for="optCliente">Registrarme como Cliente</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="registerType" id="optUsuario" value="Usuario">
                        <label class="form-check-label" for="optUsuario">Registrarme como Usuario (Admin)</label>
                    </div>
                    <div id="adminCodeGroup" class="mb-3" style="display:none;">
                        <label for="adminCode" class="form-label">Código de administrador</label>
                        <input type="password" id="adminCode" class="form-control" placeholder="Ingrese el código">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button"
                            class="btn btn-primary"
                            id="registerContinueBtn"
                            data-client-url="@Url.Action("Create", "Clientes")"
                            data-admin-url="@Url.Action("Create", "Usuarios")">
                        Continuar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>