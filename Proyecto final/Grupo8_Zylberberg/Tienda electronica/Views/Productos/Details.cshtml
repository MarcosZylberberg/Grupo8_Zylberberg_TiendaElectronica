@model Tienda_electronica.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Detalles del Producto</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CantidadStock)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CantidadStock)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="~/images/@Model.Imagen" alt="Imagen del producto" class="img-fluid rounded border" style="max-height: 250px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdProducto" class="btn btn-warning me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
