@model Tienda_electronica.Models.DetallePedido

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header" style="background-color: var(--color-dark-gray); color: var(--color-white);">
            <h2 class="mb-0">Eliminar Detalle de Pedido</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-4">¿Estás seguro de que querés eliminar este detalle?</h4>

            <dl class="row">
                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Cantidad)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cantidad)</dd>
                <dt class="col-sm-3 text-muted">
                    @Html.DisplayNameFor(model => model.PrecioUnitario)
                </dt>
                <dd class="col-sm-9">
                    @Model.PrecioUnitario.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-AR"))
                </dd>

            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdDetalle" />
                <div class="d-flex justify-content-start gap-2">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" asp-controller="Pedidos" class="btn btn-black">Volver al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>
